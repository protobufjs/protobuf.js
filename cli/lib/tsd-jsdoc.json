{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "includePattern": false
    },
    "plugins": [
        "./tsd-jsdoc/plugin"
    ],
    "opts": {
        "encoding"      : "utf8",
        "recurse"       : true,
        "lenient"       : true,
        "template"      : "./tsd-jsdoc",

        "private"       : false,
        "comments"      : true,
        "destination"   : false
    }
}
